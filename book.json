{
    "root": "./docsrc",
    "title": "gitbook boilerplate",
    "description": "はじめてのGitBook",
    "author": "Y.Nishimura",
    "gitbook": ">= 3.0.0",
    "pdf": {
        "pageNumbers": true,
        "fontSize": 12,
        "fontFamiry": "GenShinGothic-Normal.ttf",
        "paperSize": "a4",
        "margin": {
            "top": 56,
            "bottom": 56,
            "right": 62,
            "left": 62
        }
    },
    "plugins": [
        "-sharing",
        "hide-published-with",
        "graph",
        "mermaid-gb3",
        "uml",
        "toc"
     ],
    "pluginsConfig": {
        "toc": {
            "addClass": true,
            "className": "toc"
        }
    },
    "variables": {
        "test1": "test1 variable"
    }
}

